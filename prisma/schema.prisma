generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Prompt {
  id        String   @id @default(uuid())
  title     String
  content   String
  priceSol  Float
  owner     String
  category  String?
  buyers    String[] @default([])
  filters   String[] @default([])
  createdAt DateTime @default(now())

  @@index([category], map: "idx_prompt_category")
  @@index([createdAt(sort: Desc)], map: "idx_prompt_created_at")
  @@index([filters], map: "idx_prompt_filters", type: Gin)
  @@index([owner], map: "idx_prompt_owner")
  @@index([priceSol], map: "idx_prompt_price_sol")
}

model TransactionRecord {
  id        String   @id @default(uuid())
  signature String   @unique
  promptId  String
  buyer     String
  lamports  BigInt
  createdAt DateTime @default(now())
}
